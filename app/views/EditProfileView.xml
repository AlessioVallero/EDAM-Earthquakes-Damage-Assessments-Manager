        <ScrollView id="scrollViewEditProfile">
            <Label id="lblEditProfileUsername" />
            <View id="viewAppTextFieldEditProfileOldPassword">
                <Widget id="widgetAppTextFieldEditProfileOldPassword" src="com.diseg.AppTextField" />
            </View>
            <View id="viewAppTextFieldEditProfilePassword">
                <Widget id="widgetAppTextFieldEditProfilePassword" src="com.diseg.AppTextField" />
            </View>
            <View id="viewAppTextFieldEditProfilePasswordConfirm">
                <Widget id="widgetAppTextFieldEditProfilePasswordConfirm" src="com.diseg.AppTextField" />
            </View>
            <View id="viewAppTextFieldEditProfileName">
                <Widget id="widgetAppTextFieldEditProfileName" src="com.diseg.AppTextField" />
            </View>
            <View id="viewAppTextFieldEditProfileGroup">
                <Widget id="widgetAppTextFieldEditProfileGroup" src="com.diseg.AppTextField" />
            </View>
            <View id="viewAppTextFieldEditProfileEmail">
                <Widget id="widgetAppTextFieldEditProfileEmail" src="com.diseg.AppTextField" />
